<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.co.sattamaster.ui.AddCoins.AddCoinsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<include
    layout="@layout/include_toolbar" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/balance_layout"
    app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/toolbar_color"
    android:padding="10dp" >


    <TextView
        android:id="@+id/balance_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Wallet Balance"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balance_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Rs. 10000"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_amount"
        app:layout_constraintLeft_toLeftOf="@+id/balance_amount"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_amount" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Owner"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add coins to User"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:textSize="18sp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter User Mobile Here"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle"
    android:padding="10dp"
    android:id="@+id/user_mobile" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Amount Here"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:id="@+id/user_coins" />




<Button
    android:id="@+id/send_user_coin"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center_horizontal"
    android:text="SEND"
    android:textColor="@color/md_grey_700"
    android:textSize="18sp"
    android:background="@drawable/rectangle_color" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add coins to Moderator"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:textSize="18sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Moderator Mobile Here"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:padding="10dp"
                android:id="@+id/moderator_mobile" />

<EditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:hint="Enter Amount Here"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle"
    android:padding="10dp"
    android:id="@+id/enter_moderator_coins" />




<Button
    android:id="@+id/send_moderator_coin"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center_horizontal"
    android:text="SEND"
    android:textColor="@color/md_grey_700"
    android:textSize="18sp"
    android:background="@drawable/rectangle_color"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add coins to Owner"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:textSize="18sp" />

<EditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:hint="Enter Amount Here"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle"
    android:padding="10dp"
    android:id="@+id/enter_owner_coins" />


<Button
    android:id="@+id/send_owner_coin"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center_horizontal"
    android:text="SEND"
    android:textColor="@color/md_grey_700"
    android:textSize="18sp"
    android:background="@drawable/rectangle_color"
    />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/addcoins_progressbar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:text="Loading"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:text="Please Wait..."
            android:textSize="20sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

</RelativeLayout>